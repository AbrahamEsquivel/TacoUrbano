---
import Logo from '../../assets/Logo.png';
import BtnGray from '../UiComponents/BtnGris.astro';
import BtnNaranja from '../UiComponents/BtnNaranja.astro';
---


<header class="w-full h-auto p-2 row-span-3 col-span-full bg-white border-b-[1px] border-gray-300">

    <!--Logo -->
    <section class="w-full h-auto grid grid-cols-9 items-center justify-center gap-2.5">
        <div class="h-auto col-span-2 flex items-center">
            <img src={Logo.src} alt="Logo" width="40px" height="40px" class="mr-2">
            <h1 class="text-xl font-bold text-amber-900">TacoUrbano</h1>
        </div>

        <!--Input de busqueda -->
        <div class="w-full h-auto col-span-4 relative">
            <form action="/buscar" method="get">
                <input
                    type="text"
                    name="Busqueda"
                    class="bg-gray-100 p-1.5 pr-10 w-full rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500"
                    placeholder="Buscar productos.....">
                <button type="submit" class="absolute inset-y-0 right-0 flex items-center pr-3"> 
                    <i class="ri-search-line text-gray-400"></i>
                </button>
            </form>
        </div>

        <div class="col-span-3 flex justify-end items-center gap-2">
            <BtnGray icon="ri-loop-left-line" href="/recargar-pagina" text="" />
            <BtnGray icon="ri-wifi-line" href="/carrito" text="" />
            <BtnNaranja icon="ri-table-line" href="/carrito" text="Seleccionar Mesa" />
        </div>

    </section>
</header>